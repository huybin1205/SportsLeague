@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var dtable = $('#VaiTroTable').DataTable({
                //dom: 'Bfrtip',
                //buttons: [
                //    'excel','print'
                //],
                "ajax": {
                    "url": "../VaiTro/GetData",
                    "type": "Get",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "TenVaiTro" },
                    {
                        "data": "MaVaiTro", render: function (id) {
                            var bHtml = "<div class='btn-group' role='group' aria-label='updaterecord'>";
                            bHtml += "<button1 class='btn btn-primary' onclick=Edit(" + id + ") style='margin-right:5px;'></i>Chỉnh sửa</button1>";
                            bHtml += "<button class='btn btn-danger'  onclick=Xoa(" + id + ") style='margin-right:5px;'>Xóa</button>";
                            bHtml += "</div>";
                            return bHtml;
                        }
                    }
                ],
                "language": {
                    "url": 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json'
                }
            });
        });

        function Xoa(id) {
            var result = confirm("Bạn có muốn xóa vai trò này?");
            if (result) {
                window.location.href = "@Url.Action("Xoa", "VaiTro")?maVaiTro=" + id;
            }
        }

        function Edit(id) {
            window.location.href = "@Url.Action("CapNhat", "VaiTro")?maVaiTro=" + id;
        }
    </script>
}
