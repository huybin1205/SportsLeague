        $("#chzn-select1").chosen();
    });
</script>
<script type="text/javascript">
    $(function () {
        //. là class
        //# là id
        $("#chzn-select2").chosen();
    });
</script>

<script>
    $(function () {
        $('.jqueryui-marker-datepicker').datetimepicker({
            showSecond: true,
            dateFormat: 'dd/mm/yy',
            timeFormat: 'hh:mm:ss',
            stepHour: 2,
            stepMinute: 10,
            stepSecond: 10

        });
    });
</script>