
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .logo_login {
        background: url('https://img.freepik.com/premium-vector/soccer-template-design-football-banner-sport-layout-design-vector-illustration_42237-1097.jpg')
    }
</style>
<div class="row column_title">
    <div class="col-md-12">
        <div class="page_title">
            <h2>Quản lý đội bóng</h2>
        </div>
    </div>
</div>
<div class="row">
    <!-- invoice section -->
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2><i class="fa fa-file-text-o"></i> Đăng ký đội bóng</h2>
                </div>
            </div>
            <div class="full">
                <div class="invoice_inner">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="full invoice_blog padding_infor_info padding-bottom_0">
                                <form id="formDoiBong" action="@Url.Action("DangKy","DoiBong")" method="post" enctype="multipart/form-data">
                                    <fieldset>
                                        <div class="field">
                                            <label class="label_field">Tên Đội Bóng</label>
                                            <input type="text" class="form-control" name="TenDoiBong" placeholder="Tên Đội Bóng" />
                                        </div>
                                        @*<div class="field">
                                            <label class="label_field">Logo</label>
                                                 <input type="text" class="form-control" name="Logo" placeholder="Logo" />
                                                    </div>*@

                                        @*<div class="form-group">
                                            <img src="../@Model.Logo" alt="Logo đội bóng" />
                                        </div>*@

                                        <div class="form-group">
                                            <input type="file" id="imgfile" name="Logo" accept="image/*" />
                                        </div>


                                        <div class="field">
                                            <label class="label_field">Người quản lý clb</label>
                                            <input type="text" class="form-control" name="NguoiQuanLyCLB" placeholder="Người quản lý clb" />
                                        </div>
                                        <div class="field">
                                            <label class="label_field">Đội trưởng</label>
                                            <input type="text" class="form-control" name="DoiTruong" placeholder="Đội trưởng" />
                                        </div>
                                        <div class="field">
                                            <label class="label_field">Vị Trí</label>
                                            <input type="text" class="form-control" name="ViTri" placeholder="Vị trí" />
                                        </div>


                                        <div class="field margin_0">
                                            <input class="btn btn-success" style="margin-top: 5px; margin-bottom: 5px" type="submit" id="btnDangKy" value="Đăng ký" />
                                            <a href="@Url.Action("Index","DoiBong")"><span class="btn btn-danger">Quay lại</span></a>
                                        </div>

                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

