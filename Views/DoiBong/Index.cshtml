<script type="text/javascript">
    var dtable;
    $(document).ready(function () {
        var dtable = $('#DoiBongTable').DataTable({
            //"processing": true,
            //"serverSide": true,
            "ajax": {
                "url": "../DoiBong/GetData",
                "type": "Get",
                "datatype": "json"
            },
            "columns": [
              /*  { "data": "MaDoiBong" },*/
                {
                    "data": "Logo",
                    "render": function (data, type, row) {
                        if (data) {
                            return "<img src='../"+data+"' alt='Logo đội bóng' style='width: 50px' />";
                        }
                    }
                },
                { "data": "TenDoiBong" },
                { "data": "NguoiQuanLyCLB" },
                { "data": "DoiTruong" },
                { "data": "ViTri" },
                {
                    "data": "MaDoiBong", render: function (id/*, type, row , meta*/) {
                        //return "<button class='btn btn-primary' style='margin-right:5px; onclick=Edit(" + JSON.stringify(row) + ")'>Edit</button>" +
                        //    "<button class='btn btn-danger' style='margin-right:5px; onclick=Delete(" + JSON.stringify(row) + ")'>Delete</button>";
                        var bHtml = "<div class='btn-group' role='group' aria-label='updaterecord'>";
                        bHtml += "<button1 class='btn btn-primary' onclick=Edit(" + id + ") style='margin-right:5px;'></i>Chỉnh sửa</button1>";
                        bHtml += "<button class='btn btn-danger'  onclick=Xoa(" + id+ ") style='margin-right:5px;'>Xóa</button>";
                        bHtml += "</div>";
                        return bHtml;
                    }
                }

            ],
            "language": {
                "url": 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json'
            }
        });
    });


    function Xoa(id) {
        var result = confirm("Bạn có muốn xóa đội bóng này?");
        if (result) {
            window.location.href = "@Url.Action("Xoa", "DoiBong")?maDoiBong=" + id;
        }
    }

    function Edit(id) {
        window.location.href = "@Url.Action("CapNhat", "DoiBong")?maDoiBong=" + id;
    }


</script>

