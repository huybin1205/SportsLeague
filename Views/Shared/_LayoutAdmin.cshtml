<body class="dashboard dashboard_1">
    @using SportsLeague.Models
    @{
        SportsLeague.Models.NguoiDung user = new SportsLeague.Models.NguoiDung();
        if (Session["UserLogin"] != null)
        {
            user = Session["UserLogin"] as SportsLeague.Models.NguoiDung;
        }
    }
    <div class="full_container">
        <div class="inner_container">
            <!-- Sidebar  -->
            <nav id="sidebar">
                <div class="sidebar_blog_1">
                    <div class="sidebar-header">
                        <div class="logo_section">
                            <a href="/Home/Index"><img style="width: 80px; height: 80px" class="logo_icon img-responsive" src="~/templates/images/logo/logodoibongdep.png" alt="#" /></a>
                        </div>
                    </div>
                    <div class="sidebar_user_info">
                        <div class="icon_setting"></div>
                        <div class="user_profle_side">
                            <div class="user_img">
                                <img class="img-responsive" src="/@user.Avatar" @*alt="#"*@ />
                            </div>
                            <div class="user_info">
                                <h6>@user.Ho @user.Ten </h6>
                                <p><span class="online_animation"></span> Trực tuyến</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="sidebar_blog_2">
                    <h4>Phần mềm quản lý giải đấu</h4>
                    <ul class="list-unstyled components">
                        @{
                            var vaiTro = string.Empty;
                            PhanQuyenNguoiDung phanQuyen = null; ;
                            using (SportLeagueContext _db = new SportLeagueContext())
                            {
                                phanQuyen = _db.PhanQuyenNguoiDungs.FirstOrDefault(x => x.MaNguoiDung == user.MaNguoiDung);
                                if (phanQuyen != null)
                                {
                                    vaiTro = phanQuyen.VaiTro.TenVaiTro;
                                }
                            }
                        }

                        @if (vaiTro == "Admin")
                        {
                            <li><a href="/Home/Index"><i class="fa fa-dashboard yellow_color"></i> <span> Dashboard</span></a></li>

                            <li><a href="/QLGiaidau/Index"><i class="fa fa-trophy orange_color"></i> <span> Quản lý Giải đấu</span></a></li>


                            <li><a href="/DoiBong/Index"><i class="fa fa-users blue2_color"></i> <span> Quản lý Đội bóng</span></a></li>


                            <li><a href="/CauThu/Index"><i class="fa fa-futbol-o red_color"></i> <span> Quản lý Cầu thủ</span></a></li>


                            <li><a href="/VaiTro/Index"><i class="fa fa-user purple_color2"></i> <span> Vai Trò Người Dùng</span></a></li>


                            <li><a href="/LichThiDau/Index"><i class="fa fa-calendar green_color"></i> <span> Lịch Thi Đấu</span></a></li>


                            <li><a href="/QuanLyNguoiDung/Index"><i class="fa fa-binoculars purple_color"></i> <span> Quản Lý Người Dùng</span></a></li>


                            <li><a href="/QuanLyDanhHieuCauThu/Index"><i class="fa fa fa-certificate purple_color2"></i> <span> Quản Lý Danh Hiệu Cầu Thủ</span></a></li>

                            <li><a href="/LoaiGiaiThuong/Index"><i class="fa fa-gift yellow_color"></i> <span> Loại Giải Thưởng</span></a></li>
                        }
                        else if (vaiTro == "Team")
                        {
                            <li><a href="/DoiBong/CapNhat?maDoiBong=@phanQuyen.MaDoiBong&IsTeam=1"><i class="fa fa-users blue2_color"></i> <span> Quản lý Đội bóng</span></a></li>
                        }

                    </ul>
                </div>
            </nav>
            <!-- end sidebar -->
            <!-- right content -->
            <div id="content">
                <!-- topbar -->
                <div class="topbar">
                    <nav class="navbar navbar-expand-lg navbar-light">
                        <div class="full">
                            <button type="button" id="sidebarCollapse" class="sidebar_toggle"><i class="fa fa-bars"></i></button>
                            <div class="logo_section">
                                <a href="/Home/Index"><img style="width: 50px; height: 50px" width="70" height="80" class="img-responsive" src="~/templates/images/logo/logodoibongdep.png" alt="#" /></a>
                            </div>
                            <div class="right_topbar">
                                <div class="icon_info">
                                    @*<ul>
                                            <li><a href="#"><i class="fa fa-bell-o"></i><span class="badge">2</span></a></li>
                                            <li><a href="#"><i class="fa fa-question-circle"></i></a></li>
                                            <li><a href="#"><i class="fa fa-envelope-o"></i><span class="badge">3</span></a></li>
                                        </ul>*@
                                    <ul class="user_profile_dd">
                                        <li>
                                            <a class="dropdown-toggle" data-toggle="dropdown"><img class="img-responsive rounded-circle" src="/@user.Avatar" @*alt="#"*@ /><span class="name_user">@user.Ho @user.Ten</span></a>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" href="/NguoiDung/Profile">Thông tin tài khoản</a>
                                                @*<a class="dropdown-item" href="settings.html">Settings</a>
                                                    <a class="dropdown-item" href="help.html">Help</a>*@
                                                <a class="dropdown-item" href="/NguoiDung/Login"><span>Đăng Xuất</span> <i class="fa fa-sign-out"></i></a>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
                <!-- end topbar -->
                <!-- dashboard inner -->
                <div class="midde_cont">
                    @RenderBody()
                    <!-- footer -->
                    <div class="container-fluid">
                        <div class="footer">
                            <p>
