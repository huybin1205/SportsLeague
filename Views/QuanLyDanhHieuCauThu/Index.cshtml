<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h3>Danh Sách Danh Hiệu Cầu Thủ</h3>
        <a class="btn btn-success" style="margin-bottom:10px" href="/LichThiDau/TaoDanhHieuCauThu"><i class="fa fa-plus"></i>Thêm mới</a>
        </div>

    </div>
    <div class="row">
        <div class="col-md-12">
            <table id="DanhHieuCauThuTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Mã Lịch Thi Đấu</th>
                        <th>Tên Cầu Thủ</th>
                        <th>Loại Giải Thưởng</th>
                        <th>Số Lượng</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#DanhHieuCauThuTable').DataTable({
                "ajax": {
                    "url": "/QuanLyDanhHieuCauThu/GetData",
                    "type": "Get",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "MaLichThiDau" },
                    { "data": "TenCauThu" },
                    { "data": "LoaiGiaiThuong" },
                    { "data": "SoLuong" },
                    {
                        "data": "MaDanhHieuCauThu", render: function (id) {
                            var bHtml = "<div class='btn-group' role='group' aria-label='updaterecord'>";
                            bHtml += "<button1 class='btn btn-primary' onclick=Edit(" + id + ") style='margin-right:5px;'></i>Chỉnh sửa</button1>";
                            bHtml += "<button class='btn btn-danger'  onclick=Xoa(" + id + ") style='margin-right:5px;'>Xóa</button>";
                            bHtml += "</div>";
                            return bHtml;
                        }
                    }
                ],
                "language": {
                    "url": 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json'
                }
            });
        });
        function Xoa(id) {
            var result = confirm("Bạn có muốn xóa danh hiệu này?");
            if (result) {
                window.location.href = "@Url.Action("Xoa", "QuanLyDanhHieuCauThu")?MaDanhHieuCauThu=" + id;
            }
    }

    function Edit(id) {
        window.location.href = "@Url.Action("CapNhatDanhHieuCauThu", "LichThiDau")?MaDanhHieuCauThu=" + id;
    }
    </script>
}



