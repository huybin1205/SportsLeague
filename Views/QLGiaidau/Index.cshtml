    <div id="deleteContainer"></div>
</div>


<script type="text/javascript">
    var dtable;
    $(document).ready(function () {
        var dtable = $('#QLGiaidauTable').DataTable({
            "ajax": {
                "url": "../QLGiaidau/GetData",
                "type": "Get",
                "datatype": "json"
            },
            "columns": [
              /*  { "data": "MaGiaiDau" },*/
                { "data": "TenGiaiDau" },
                { "data": "NamThucHien" },
                 { "data": "ThoiGianToChuc" },             
                { "data": "DonViToChuc" },
                { "data": "SoLuongDoiThamGia" },
                {
                    "data": "MaGiaiDau", render: function (id) {
                        var bHtml = "<div class='btn-group' role='group' aria-label='updaterecord'>";
                        bHtml += "<button1 class='btn btn-primary' onclick=Edit(" + id + ") style='margin-right:5px;'></i>Chỉnh sửa</button1>";
                        bHtml += "<button class='btn btn-danger'  onclick=Xoa(" + id + ") style='margin-right:5px;'>Xóa</button>";
                        bHtml += "</div>";
                        return bHtml;
                    }
                }

            ],
            "language": {
                "url": 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json'
            }
        });
    });

    function Xoa(id) {
        var result = confirm("Bạn có muốn xóa giải đấu này?");
        if (result) {
            window.location.href = "@Url.Action("Xoa", "QLGiaidau")?maGiaiDau=" + id;
        }
    }

    function Edit(id) {
        window.location.href = "@Url.Action("CapNhat", "QLGiaidau")?maGiaiDau=" + id;
    }
</script>

