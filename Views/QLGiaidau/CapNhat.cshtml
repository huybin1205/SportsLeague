                                        <input class="btn btn-info" style="margin-top: 5px; margin-bottom: 5px" type="button" id="btnTaoLichThiDau" value="Tạo lịch thi đấu tự động" />
                                        <a href="@Url.Action("XemBXH","LichThiDau", new { maGiaiDau = Model.MaGiaiDau})"><span class="btn btn-warning">Xem bảng xếp hạng</span></a>
                                        <a href="@Url.Action("XemDanhHieuCauThu", "LichThiDau", new {maGiaiDau = Model.MaGiaiDau })" class="btn btn-info">Xem Danh Hiệu</a>
