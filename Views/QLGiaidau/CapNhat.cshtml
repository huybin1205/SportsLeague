<div class="row">
    <!-- invoice section -->
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2><i class="fa fa-file-text-o"></i> Đội bóng tham gia</h2>
                </div>
            </div>
            <div class="full">
                <div class="invoice_inner">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="full invoice_blog padding_infor_info padding-bottom_0">
                                <form id="formThemDoiBong">
                                    @Html.HiddenFor(model => model.MaGiaiDau)
                                    <fieldset>
                                        <div class="field">
                                            <label class="label_field">Đội bóng</label>
                                            <select name="MaCLB" class="chzn-select" style="width:200px;">
                                                @foreach (var doibong in ViewBag.DSDoiBong)
                                                {
                                                    <option value="@doibong.MaDoiBong">@doibong.TenDoiBong</option>
                                                }
                                            </select>
                                            <input class="btn btn-danger" id="btnThemDoiBong" style="margin-top: 5px; width: 50px" title="Thêm đội bóng" value="+" />
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="full invoice_blog padding_infor_info padding-bottom_0">
                                <span>Đội bóng tham gia</span>
                                <table id="DoiBongTable" class="display">
                                    <thead>
                                        <tr>
                                            <th>Logo</th>
                                            <th>Tên Đội Bóng</th>
                                            <th>Người quản lý CLB</th>
                                            <th>Hành Động</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#btnCapNhat').click(function () {
            // Hiển thị lên cái đang xử lý
            ShowLoading();

            $.ajax({
                url: '@Url.Action("CapNhat", "QLGiaidau")',
                async: true,
                type: "POST",
                timeout: 60000,
                data: $('#formCapNhat').serialize() // public ActionResult DangKy(NguoiDung nguoiDung) => data là nguoiDung
            }).done(function (response, textStatus, jqXHR) {
                // Thành công
                //return Json(new
                //    {
                //        result = true,
                //        message = "Đăng ký thành công"
                //    }, JsonRequestBehavior.AllowGet);

                if (response.result) {
                    toastr.success(response.message);
                } else {
                    toastr.error(response.message);
                }


            }).fail(function (jqXHR, textStatus, errorThrown) {
                if (textStatus === 'timeout') {
                    funcPrompt('Request time out', '', 'error');
                } else {
                    funcPrompt(textStatus, errorThrown, 'error');
                }
            }).always(function () {
                CloseLoading();
            });
        });

        $('#btnTaoLichThiDau').click(function () {
            // Hiển thị lên cái đang xử lý
            ShowLoading();

            $.ajax({
                url: '@Url.Action("TaoLichThiDauHangLoat", "LichThiDau")',
                async: true,
                type: "POST",
                timeout: 60000,
                data: $('#formCapNhat').serialize()
            }).done(function (response, textStatus, jqXHR) {
                if (response.result) {
                    toastr.success(response.message);
                } else {
                    toastr.error(response.message);
                }
            }).fail(function (jqXHR, textStatus, errorThrown) {
                if (textStatus === 'timeout') {
                    funcPrompt('Request time out', '', 'error');
                } else {
                    funcPrompt(textStatus, errorThrown, 'error');
                }
            }).always(function () {
                CloseLoading();
            });
        });

        $('#btnThemDoiBong').click(function () {
            // Hiển thị lên cái đang xử lý
            ShowLoading();

            $.ajax({
                url: '@Url.Action("Them", "QuanLyCLBVaGiaiDau")',
                async: true,
                type: "POST",
                timeout: 60000,
                data: $('#formThemDoiBong').serialize() // public ActionResult DangKy(NguoiDung nguoiDung) => data là nguoiDung
            }).done(function (response, textStatus, jqXHR) {
                // Thành công
                //return Json(new
                //    {
                //        result = true,
                //        message = "Đăng ký thành công"
                //    }, JsonRequestBehavior.AllowGet);

                if (response.result) {
                    $('#DoiBongTable').DataTable().ajax.reload();
                    toastr.success(response.message);
                } else {
                    toastr.error(response.message);
                }


            }).fail(function (jqXHR, textStatus, errorThrown) {
                if (textStatus === 'timeout') {
                    funcPrompt('Request time out', '', 'error');
                } else {
                    funcPrompt(textStatus, errorThrown, 'error');
                }
            }).always(function () {
                CloseLoading();
            });
        });

        $('a[title="Tạo giải đấu theo bảng"]').click(function () {
            Swal.fire({
                title: "Nhập số bảng muốn tạo",
                input: "text",
                inputAttributes: {
                    autocapitalize: "off"
                },
                showCancelButton: true,
                confirmButtonText: "Tạo bảng",
                cancelButtonText: "Hủy",
                showLoaderOnConfirm: true,
                preConfirm: async (soBang) => {
                    $.ajax({
                        url: '@Url.Action("TaoLichThiDauTheoBang", "QLGiaidau")',
                        async: true,
                        type: "POST",
                        timeout: 60000,
                        data: {
                            maGiaiDau: @Model.MaGiaiDau,
                            soLuongBang: soBang
                        }
                    }).done(function (response, textStatus, jqXHR) {
                        if (response.result) {
                            toastr.success(response.message);
                        } else {
                            toastr.error(response.message);
                        }

                    }).fail(function (jqXHR, textStatus, errorThrown) {
                        if (textStatus === 'timeout') {
                            funcPrompt('Request time out', '', 'error');
                        } else {
                            funcPrompt(textStatus, errorThrown, 'error');
                        }
                    }).always(function () {
                        CloseLoading();
                    });
                },
                allowOutsideClick: () => !Swal.isLoading()
            }).then((result) => {
            });
        });
    });
</script>

<script type="text/javascript">
    var dtable;
    $(document).ready(function () {
        var dtable = $('#DoiBongTable').DataTable({
            //"processing": true,
            //"serverSide": true,
            "ajax": {
                "url": "@Url.Action("GetData","QuanLyCLBVaGiaiDau", new { maGiaiDau=Model.MaGiaiDau })",
                "type": "Get",
                "datatype": "json"
            },
            "columns": [
              /*  { "data": "MaDoiBong" },*/
                {
                    "data": "Logo",
                    "render": function (data, type, row) {
                        if (data) {
                            return "<img src='../"+data+"' alt='Logo đội bóng' style='width: 50px' />";
                        }
                    }
                },
                { "data": "TenDoiBong" },
                { "data": "NguoiQuanLyCLB" },
                {
                    "data": "MaDoiBong", render: function (id) {
                        var bHtml = "<div class='btn-group' role='group' aria-label='updaterecord'>";
                        /*bHtml += "<button1 class='btn btn-primary' onclick=Edit(" + id + ") style='margin-right:5px;'></i>Chỉnh sửa</button1>";*/
                        bHtml += "<button title='Xóa đội bóng' class='btn btn-danger'  onclick=Xoa(" + id + ") style='margin-right:5px;'>Xóa</button>";
                        bHtml += "</div>";
                        return bHtml;
                    }
                }

            ],
            "language": {
                "url": 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json'
            }
        });

    });


    function Xoa(id) {
        var result = confirm("Bạn có muốn xóa đội bóng này?");
        if (result) {
            window.location.href = "@Url.Action("Xoa", "QuanLyCLBVaGiaiDau")?maGiaiDau=" + @Model.MaGiaiDau +"&maCLB=" + id;
        }
    }

    function Edit(id) {
        window.location.href = "@Url.Action("CapNhat", "DoiBong")?maDoiBong=" + id;
    }


</script>

