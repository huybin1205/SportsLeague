</div>
<div class="row">
    <!-- invoice section -->
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2><i class="fa fa-file-text-o"></i> Cập nhật giải đấu</h2>
                </div>
            </div>
            <div class="full">
                <div class="invoice_inner">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="full invoice_blog padding_infor_info padding-bottom_0">
                                <form id="formCapNhat" action="@Url.Action("QL", "QLGiaidau")" method="post">
                                    @Html.HiddenFor(model => model.MaGiaiDau)
                                    <fieldset>
                                        <div class="field">
                                            <label class="label_field">Tên giải đấu</label>
                                            <input type="text" class="form-control" name="TenGiaiDau" placeholder="Tên giải đấu" value="@Model.TenGiaiDau" />
                                        </div>
                                        <div class="field">
                                            <label class="label_field">Năm thực hiện</label>
                                            <input type="datetime" class="form-control" name="NamThucHien" placeholder="Năm thực hiện" value="@Model.NamThucHien" />
                                        </div>
                                        <div class="field">
                                            <label class="label_field">Đơn vị tổ chức</label>
                                            <input type="text" class="form-control" name="DonViToChuc" placeholder="Đơn vị tổ chức" value="@Model.DonViToChuc" />
                                        </div>
