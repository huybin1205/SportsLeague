                                            }
                                        </div>
                                          <div class="field">
                                              <label class="label_field">Ngày kết thúc</label>
                                            @if (Model.NgayKetThuc.HasValue)
                                            {
                                                <input type="date" class="form-control" name="NgayKetThuc" placeholder="Ngày kết thúc" value="@Model.NgayKetThuc.Value.ToString("yyyy-MM-dd")" />
                                            }
                                            else
                                            {
                                                <input type="date" class="form-control" name="NgayKetThuc" placeholder="Ngày kết thúc" />
                                            }
                                        </div>


                                        @*<div class="field">
                                            <label class="label_field">Ngày kết thúc</label>
                                            <input type="date" class="form-control" name="NgayKetThuc" placeholder="Ngày kết thúc" value="@Model.NgayKetThuc" />
                                        </div>*@

                                    <div class="field margin_0">
