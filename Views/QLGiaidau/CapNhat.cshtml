                                        </div>
                                        @*<div class="field">
                                            <label class="label_field">Ngày bắt đầu</label>
                                            <input type="date" class="form-control" name="NgayBatDau" placeholder="Ngày bắt đầu" value="@Model.NgayBatDau" />
                                        </div>*@

