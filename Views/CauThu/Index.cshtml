<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h3>Danh sách cầu thủ</h3>
            <a class="btn btn-success" style="margin-bottom:10px" href="/CauThu/DangKy"><i class="fa fa-plus"></i>Thêm Mới</a>
        </div>

    </div>

    <div class="row">
        <div class="col-md-12">
            <table id="CauThuTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        @*<th>Mã Cầu thủ</th>*@
                        <th>Tên Cầu thủ</th>
                        <th>Avatar</th>
                        @*<th>Ngày Sinh</th>*@
                        @*<th>Chiều cao</th>*@
                        <th>Quốc Tịch</th>
                        <th>Vị trí thi đấu</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>




<script type="text/javascript">
    var dtable;
    $(document).ready(function () {
        var dtable = $('#CauThuTable').DataTable({
            //"processing": true,
            //"serverSide": true,
            "ajax": {
                "url": "../CauThu/GetData",
                "type": "Get",
                "datatype": "json"
            },
            "columns": [
               /* { "data": "MaCauThu" },*/
                { "data": "TenCauThu" },
                {
                    "data": "Avatar",
                    "render": function (data, type, row) {
                        if (data) {
                            return "<img src='../"+data+"' alt='avatar cầu thủ' style='width: 50px' />";
                        }
                    }

                },
                //{ "data": "NgaySinh" },
                //{ "data": "ChieuCao" },
                { "data": "QuocTich" },
                { "data": "ViTriThiDau" },
                {
                    "data": "MaCauThu", render: function (id, type, row , meta) {
                //        return "<button class='btn btn-primary' style='margin-right:5px; onclick=Edit(" + JSON.stringify(row) + ")'>Edit</button>" +
                //            "<button class='btn btn-danger' style='margin-right:5px; onclick=Delete(" + JSON.stringify(row) + ")'>Delete</button>";
                        var bHtml = "<div class='btn-group' role='group' aria-label='updaterecord'>";
                        bHtml += "<button1 class='btn btn-primary' onclick=Edit(" + id + ") style='margin-right:5px;'></i>Chỉnh sửa</button1>";
                        bHtml += "<button class='btn btn-danger'  onclick=Xoa(" + id + ") style='margin-right:5px;'>Xóa</button>";
                        bHtml += "</div>";
                        return bHtml;
                    }
                }

            ],
            "language": {
                "url": 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json'
            }
        });
    });

  function Xoa(id) {
      var result = confirm("Bạn có muốn xóa cầu thủ này?");
      if (result){
           window.location.href = "@Url.Action("Xoa", "CauThu")?maCauThu=" + id;
      }

    }

    function Edit(id) {
        window.location.href = "@Url.Action("CapNhat", "CauThu")?maCauThu=" + id;
    }


</script>