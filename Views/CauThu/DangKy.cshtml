
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .logo_login {
        background: url('https://img.freepik.com/premium-vector/soccer-template-design-football-banner-sport-layout-design-vector-illustration_42237-1097.jpg')
    }
</style>
<div class="row column_title">
    <div class="col-md-12">
        <div class="page_title">
            <h2>Quản lý cầu thủ</h2>
        </div>
    </div>
</div>
<div class="row">
    <!-- invoice section -->
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2><i class="fa fa-file-text-o"></i> Đăng ký cầu thủ</h2>
                </div>
            </div>
            <div class="full">
                <div class="invoice_inner">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="full invoice_blog padding_infor_info padding-bottom_0">
                                <form id="formCauThu" action="@Url.Action("DangKy","CauThu")" method="post" enctype="multipart/form-data">
                                    <fieldset>
                                        <div class="field">
                                            <label class="label_field">Tên Cầu Thủ</label>
                                            <input type="text" class="form-control" name="TenCauThu" placeholder="Tên Cầu Thủ" />
                                        </div>
                                        @*<div class="field">
                                                 <label class="label_field">Avatar</label>
                                                <input type="text" class="form-control" name="Avatar" placeholder="Avatar" />
                                        </div>*@


                                        @*<div class="form-group">
                                            <img src="../@Model.Avatar" alt="avatar cầu thủ" />
                                        </div>*@

                                        <div class="form-group">
                                            <input type="file" id="imgfile" name="Avatar" accept="image/*" />
                                        </div>



                                        <div class="field">
                                            <label class="label_field">Ngày Sinh</label>
                                            <input type="date" class="form-control" name="NgaySinh" placeholder="Ngày Sinh" />
                                        </div>
                                        <div class="field">
                                            <label class="label_field">Chiều Cao</label>
                                            <input type="text" class="form-control" name="ChieuCao" placeholder="Chiều Cao" />
                                        </div>
                                        <div class="field">
                                            <label class="label_field">Quốc Tịch</label>
                                            <input type="text" class="form-control" name="QuocTich" placeholder="Quốc Tịch" />
                                        </div>
                                        <div class="field">
                                            <label class="label_field">Vị Trí Thi Đấu</label>
                                            <input type="text" class="form-control" name="ViTriThiDau" placeholder="Vị Trí Thi Đấu" />
                                        </div>

                                        <div class="field margin_0">
                                            <input class="btn btn-success" style="margin-top: 5px; margin-bottom: 5px" type="submit" id="btnDangKy" value="Đăng ký" />
                                            <a href="@Url.Action("Index","CauThu")"><span class="btn btn-danger">Quay lại</span></a>
                                        </div>

                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

