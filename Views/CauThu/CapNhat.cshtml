                                        <div class="form-group">
                                            <img src="../@Model.Avatar" alt="Avatar cầu thủ" style="width: 100px" />
                                        </div>

                                        <div class="form-group">
                                            <input type="file" id="imgfile" name="Avatar" accept="image/*" />
