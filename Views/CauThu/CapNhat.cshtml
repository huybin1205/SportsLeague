                                                <input type="date" class="form-control" name="NgaySinh" placeholder="ngày sinh" value="@Model.NgaySinh.Value.ToString("yyyy-MM-dd")" />
                                            }
                                            else
                                            {
                                                <input type="date" class="form-control" name="NgaySinh" placeholder="ngày sinh" />
                                            }
                                        </div>

                                        <div class="field">
                                            <label class="label_field">Chiều Cao</label>
                                            <input type="text" class="form-control" name="ChieuCao" placeholder="chiều cao" value="@Model.ChieuCao" />
                                        </div>
                                        <div class="field">
                                            <label class="label_field">Quốc Tịch</label>
                                            <input type="text" class="form-control" name="QuocTich" placeholder="quốc tich" value="@Model.QuocTich" />
                                        </div>
                                        <div class="field">
                                            <label class="label_field">Vị Trí Thi Đấu</label>
                                            <input type="text" class="form-control" name="ViTriThiDau" placeholder="vi trí thi đấu" value="@Model.ViTriThiDau" />
                                        </div>

                                        <div class="field margin_0">
                                            <input class="btn btn-success" style="margin-top: 5px; margin-bottom: 5px" type="submit" id="btnCapNhat" value="Cập nhật" />
                                            <a href="@Url.Action("Index","CauThu")"><span class="btn btn-danger">Quay lại</span></a>
                         

                                        </div>

                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
